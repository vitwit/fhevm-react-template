{
  "name": "@fhevm/sdk",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./modules/storage": {
      "import": "./dist/modules/storage/index.js",
      "require": "./dist/modules/storage/index.js",
      "types": "./dist/modules/storage/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "@zama-fhe/relayer-sdk": "^0.2.0",
    "ethers": "^6.13.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.50",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  }
}